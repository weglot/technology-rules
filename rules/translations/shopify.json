{
  "$schema": "../../schemas/translations.schema.json",
  "technology_id": 2,
  "translations": [
    {
      "type": "JSON",
      "label": "Shopify",
      "condition": [
        {
          "type": "PATH_MATCH",
          "payload": {
            "type": "MATCH_REGEX",
            "value": "^\\/payments\\/config"
          }
        }
      ],
      "value": [
        {
          "paths": ["$.paymentInstruments.*.domain"],
          "type": "URL"
        }
      ]
    },
    {
      "type": "JSON",
      "label": "Shopify",
      "condition": [
        {
          "type": "PATH_MATCH",
          "payload": {
            "type": "MATCH_REGEX",
            "value": "^\\/checkouts\\/(unstable|[\\d-]+)\\/graphql"
          }
        }
      ],
      "value": [
        {
          "paths": ["$..classicThankYouPageUrl"],
          "type": "URL"
        }
      ]
    },
    {
      "type": "JSON",
      "label": "Shopify",
      "condition": [
        {
          "type": "PATH_MATCH",
          "payload": {
            "type": "MATCH_REGEX",
            "value": "\\/products\\.json$"
          }
        }
      ],
      "value": [
        {
          "paths": [
            "$.products[*].title",
            "$.products[*].body_html",
            "$.products[*].product_type",
            "$.products[*].variants[*].title",
            "$.products[*].variants[*].option1",
            "$.products[*].variants[*].option2",
            "$.products[*].variants[*].option3",
            "$.products[*].options[*].name",
            "$.products[*].options[*].values[*]"
          ],
          "wordType": 1
        },
        {
          "paths": [
            "$.products[*].images[*].src",
            "$.products[*].image[*].src"
          ],
          "wordType": 6
        },
        {
          "paths": [
            "$.products[*].images[*].alt",
            "$.products[*].image[*].alt"
          ],
          "wordType": 7
        }
      ]
    },
    {
      "type": "JSON",
      "label": "Shopify",
      "condition": [
        {
          "type": "PATH_MATCH",
          "payload": {
            "type": "MATCH_REGEX",
            "value": "\\/products\\/.+\\.json$"
          }
        }
      ],
      "value": [
        {
          "paths": [
            "$.product.title",
            "$.product.body_html",
            "$.product.product_type",
            "$.product.variants[*].title",
            "$.product.variants[*].option1",
            "$.product.variants[*].option2",
            "$.product.variants[*].option3",
            "$.product.options[*].name",
            "$.product.options[*].values[*]"
          ],
          "wordType": 1
        },
        {
          "paths": ["$.product.images[*].src", "$.product.image[*].src"],
          "wordType": 6
        },
        {
          "paths": ["$.product.images[*].alt", "$.product.image[*].alt"],
          "wordType": 7
        }
      ]
    },
    {
      "type": "XML",
      "label": "Shopify",
      "condition": [
        {
          "type": "XML_ROOT_ELEMENT_NAME",
          "payload": {
            "selector": "products"
          }
        }
      ],
      "value": [
        {
          "paths": ["title", "description"],
          "wordType": 1
        }
      ]
    },
    {
      "type": "XML",
      "label": "Shopify",
      "condition": [
        {
          "type": "XML_ROOT_ELEMENT_NAME",
          "payload": {
            "selector": "hash"
          }
        }
      ],
      "value": [
        {
          "paths": ["title", "body-html", "product-type", "alt"],
          "wordType": 1
        },
        {
          "paths": ["src"],
          "wordType": 6
        }
      ]
    },
    {
      "type": "HTML",
      "label": "Shopify",
      "condition": [
        {
          "type": "URL_TYPE",
          "payload": "subdirectory"
        }
      ],
      "value": [
        {
          "selector": "script",
          "regex": [
            {
              "value": "Shopify.locale = \"(?<localeCode>[^\"]+)\";?"
            },
            {
              "value": "Shopify.routes.root = \"(?<url>[^\"]+)\""
            },
            {
              "value": "strings(?:[: =]*)(?<json>[^}]+\\})(?:,|;|\n])"
            }
          ],
          "id": "shopify-vars"
        }
      ]
    },
    {
      "type": "HTML",
      "label": "Shopify",
      "condition": [
        {
          "type": "URL_TYPE",
          "payload": "subdomain"
        }
      ],
      "value": [
        {
          "selector": "script",
          "regex": [
            {
              "value": "strings(?:[: =]*)(?<json>[^}]+\\})(?:,|;|\n])"
            },
            {
              "value": "Shopify.locale = \"(?<localeCode>[^\"]+)\";?"
            }
          ]
        }
      ]
    },
    {
      "type": "HTML",
      "label": "Shopify",
      "value": [
        {
          "id": "shopify-cart-template",
          "selector": "script#CartTemplate",
          "regex": "action=\"(?<url>[^\"]+)\""
        },
        {
          "selector": "button",
          "attribute": "data-add-to-cart-text",
          "wordType": 1
        },
        {
          "selector": "button",
          "attribute": "data-label",
          "wordType": 1
        }
      ]
    },
    {
      "type": "JSON",
      "label": "Shopify",
      "condition": [
        {
          "type": "FROM_DEFINITION_ID",
          "payload": "shopify-vars"
        }
      ],
      "value": [
        {
          "paths": [
            "addToCart",
            "soldOut",
            "lowStock",
            "quantityLabel",
            "product_page_text",
            "onSale",
            "unavailable",
            "added",
            "viewProduct",
            "percentOff",
            "description",
            "title",
            "text"
          ],
          "wordType": 1
        }
      ]
    },
    {
      "type": "JSON",
      "label": "Shopify",
      "value": [
        {
          "excluded_paths": ["$..discount.title"]
        }
      ]
    },
    {
      "type": "HTML",
      "label": "Shopify",
      "condition": [
        {
          "type": "PATH_MATCH",
          "payload": {
            "type": "START_WITH",
            "value": "/checkouts"
          }
        }
      ],
      "value": [
        {
          "selector": "[data-serialized-id=\"graphql\"]",
          "attribute": "data-serialized-value",
          "type": "JSON",
          "transforms": {
            "name": "html"
          },
          "id": "shopify-checkout-graphql"
        }
      ]
    },
    {
      "type": "JSON",
      "label": "Shopify",
      "condition": [
        {
          "type": "FROM_DEFINITION_ID",
          "payload": "shopify-checkout-graphql"
        }
      ],
      "value": [
        {
          "paths": [
            "$..merchandise.title",
            "$..merchandise.subtitle",
            "$..altText"
          ],
          "wordType": 1
        }
      ]
    }
  ]
}
